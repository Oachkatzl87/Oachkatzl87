void secureTheCave(){
    repeat(10){
        secureOneLane();
        if(frontIsClear()){
            moveForward();
        }
    }
}

void secureOneLane(){
    turnLeft();
    while(frontIsClear()){
        moveForward();
    }
    turnAround();
    pickBeeper();
    moveForward();
    if(onBeeper() && beeperAhead()){
        pickBeeper();
        moveForward();
        pickBeeper();
        while(frontIsClear()){
            moveForward();
        }
        turnAround();
        repeat(3){
            dropBeeper();
            moveForward();
        }
    }
    else if(onBeeper()){
        pickBeeper();
        while(frontIsClear()){
            moveForward();
        }
        turnAround();
        repeat(2){
            dropBeeper();
            moveForward();
        }
    }
    else{
        while(frontIsClear()){
            moveForward();
        }
        turnAround();
        dropBeeper();
        moveForward();
    }
    turnRight();
}
