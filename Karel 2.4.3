void addFast(){
    while(rightIsClear()){
        addOneLane();
    }
}

void addOneLane(){
    if(!onBeeper() && !beeperAhead()){
        moveForward();
        moveForward();
        if(onBeeper()){
            moveForward();
            dropBeeper();
            turnRight();
            moveForward();
            turnRight();
            while(frontIsClear()){
                moveForward();
            }
            turnAround();
        }
        else{
            moveForward();
            turnRight();
            moveForward();
            turnRight();
            while(frontIsClear()){
                moveForward();
            }
            turnAround();
        }
    }
    else if(onBeeper() && beeperAhead()){
        moveForward();
        moveForward();
        if(onBeeper()){
            moveForward();
            dropBeeper();
            turnRight();
            moveForward();
            turnRight();
            moveForward();
            dropBeeper();
            while(frontIsClear()){
                moveForward();
            }
            turnAround();
        }
        else{
            moveForward();
            turnRight();
            moveForward();
            turnRight();
            moveForward();
            dropBeeper();
            while(frontIsClear()){
                moveForward();
            }
            turnAround();
        }
    }
    else{
        moveForward();
        moveForward();
        if(!onBeeper()){
            moveForward();
            dropBeeper();
            turnRight();
            moveForward();
            turnRight();
            while(frontIsClear()){
                moveForward();
            }
            turnAround();
        }
        else{
            moveForward();
            turnRight();
            moveForward();
            turnRight();
            moveForward();
            dropBeeper();
            while(frontIsClear()){
                moveForward();
            }
            turnAround();
        }
    }
}
